<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <f1.notice.board.KenBurnsView
            android:id="@+id/kenburn"
            android:layout_gravity="center_horizontal|top"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <ImageView
            android:layout_gravity="top|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/imageView"/>


    <LinearLayout
        android:id="@+id/detail_layout"
        android:orientation="vertical"
        android:minWidth="200dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:clickable="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/detail_num"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_heading"
            android:gravity="center_horizontal"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_subheading"
            android:gravity="center_horizontal"
            android:textSize="19sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_section"
            android:gravity="center_horizontal"
            android:textSize="19sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/detail_main_text"
            android:gravity="center_horizontal|left"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_info1"
            android:gravity="center_horizontal"
            android:textColor="@color/copyright"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/detail_info2"
            android:gravity="center_horizontal"
            android:textColor="@color/copyright"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:id="@+id/copyright"
            android:text="@string/copyright"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/copyright"
            android:gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>